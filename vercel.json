{
  "version": 2,
  "builds": [
    {
      "src": "packages/server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "packages/client/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/server/server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "packages/client/build/static/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "packages/client/build/manifest.json"
    },
    {
      "src": "/favicon.ico",
      "dest": "packages/client/build/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "packages/client/build/index.html"
    }
  ]
}