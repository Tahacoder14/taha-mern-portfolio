{
  "version": 2,
  "builds": [
    {
      "src": "packages/server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "packages/client/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/packages/client/build/$1"
    }
  ]
}